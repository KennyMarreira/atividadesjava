package entities;

public class Employee {
	
	private Integer id;
	private String nome;
	private Double salario;
	
	public Employee(int id, String nome, double salario) {
		this.id = id;
		this.nome = nome;
		this.salario = salario;
	}
	
	public int getId() {
		return id;
	}
	
	public String getNome() {
		return nome;
	}
	
	public double getSalario() {
		return salario;
	}
	
	public double getAumento(double aumento) {
		return salario + salario * aumento/100;
	}
	
	public String toString() {
		return "Id: "
				+ id
				+ String.format("%n%s", nome)
				+"Salario: $ "
				+ salario;
	}
}
