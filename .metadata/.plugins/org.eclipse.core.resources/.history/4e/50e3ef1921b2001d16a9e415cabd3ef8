package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Client;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int conta = sc.nextInt();
		
		String name = sc.nextLine();

		Client client = new Client(conta, name);
		
		System.out.println("Conta: " + client.getConta());
		System.out.println("Titular: " + client.getTitular());
		
		String depInicial = sc.next();
		
		if (depInicial == "y") {
			double saldoInicial = sc.nextDouble();
			client.setSaldo(saldoInicial);
		}
		else {
			client.setSaldo(0);
		}
		System.out.println("Saldo: " + client.getSaldo());
		
		
		
		sc.close();
	}

}
