package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entities.Employee;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite quantos funcionarios registrar: ");
		int n = sc.nextInt();
		Employee [] vect = new Employee[n];
		List<String> listNome= new ArrayList<>();
		List<Integer> listId = new ArrayList<>();
		List<Double> listSalario = new ArrayList<>();
		for (int i = 0; i < vect.length; i++) {
			int id = sc.nextInt();
			String nome = sc.next();
			double salario = sc.nextDouble();
			vect[i] = new Employee(id, nome, salario);
			listId.add(id);
			listNome.add(nome);
			listSalario.add(salario);
		}
		
		System.out.print("Digite o id do funcionario para aumento: ");
		int id = sc.nextInt();
		System.out.println(listNome.indexOf(id));
		
		sc.close();
	}

}
