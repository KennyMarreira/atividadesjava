package application;

import java.util.Locale;
import java.util.Scanner;import entities.Pessoa;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Quantas pessoas serao digitadas: ");
		int n = sc.nextInt();
		Pessoa vect[] = new Pessoa[n];
		
		for (int i = 0; i < vect.length; i++) {
			sc.nextLine();
			String name = sc.nextLine();
			int idade = sc.nextInt();
			double altura = sc.nextDouble();
			vect[i] = new Pessoa(name, idade, altura);
		}
		
		double somaAltura = 0;
		for (int i = 0; i < vect.length; i++) {
			somaAltura += vect[i].getAltura();
		}
		
		double mediaAltura = somaAltura / vect.length;
		System.out.println(mediaAltura);
		
		int somaIdade = 0;
		for (int i = 0; i < vect.length; i++) {
			if (vect[i].getIdade() < 16) {
				somaIdade += vect[i].getIdade();
			}
		}
		
		System.out.println(somaIdade);
		
		sc.close();
	}

}
