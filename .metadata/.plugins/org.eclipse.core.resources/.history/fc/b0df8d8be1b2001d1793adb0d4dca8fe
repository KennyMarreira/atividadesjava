package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Quantos elementos vai ter o vetor: ");
		int n = sc.nextInt();
		int [] vect = new int [n];
		
		for (int i = 0; i < vect.length; i++) {
			vect[i] = sc.nextInt();
		}
		
		int somaPares = 0;
		int contPares = 0;
		for (int i = 0; i < vect.length; i++) {
			if (vect[i] % 2 == 0) {
				somaPares += vect[i];
				contPares += 1;
			}
		}
		
		
		int media = somaPares / contPares;
		
		if (contPares == 0) {
			System.out.println("Nenhum numero Par");
		}
		else {
			System.out.printf("Media do Pares: %d", media);
		}
		
		
		sc.close();
	}

}
